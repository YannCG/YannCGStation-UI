-- YannCGStation UI v1.0 - More beautiful, stronger, and cross-platform than Rayfield
-- Author: YannCG
-- Load method: loadstring(game:HttpGet('your-link'))()

local YannCG = {
    Version = "1.0.0",
    Flags = {},
    Notifications = {},
    Themes = {
        Default = {Bg = Color3.fromRGB(20,20,20), Accent = Color3.fromRGB(0,170,255)},
        NeonGlow = {Bg = Color3.fromRGB(10,10,25), Accent = Color3.fromRGB(255,0,255)},
        Crystal = {Bg = Color3.fromRGB(15,15,30), Accent = Color3.fromRGB(0,255,200)},
    }
}

-- Core window creation
local function CreateWindow(options)
    options = options or {}
    local Window = {
        Tabs = {},
        Name = options.Name or "YannCG Hub",
        Theme = YannCG.Themes[options.Theme] or YannCG.Themes.NeonGlow,
        Config = options.SaveConfig or {Enabled = false},
        KeySystem = options.KeySystem or false
    }

    -- Key System (License validation)
    if Window.KeySystem then
        spawn(function()
            local validKey = "YANN123"
            local inputKey = options.KeySettings.Keys[1]

            -- Validate key
            if not table.find(options.KeySettings.Keys, validKey) then
                YannCG:Notify({
                    Title = "Invalid Key",
                    Content = "Join discord.gg/t6TMHwqt to get a valid key",
                    Image = "x"
                })
                wait(3)
                error("A valid key is required to use YannCGStation UI")
            end
        end)
    end

    function Window:CreateTab(name, icon)
        local Tab = {Elements = {}}
        table.insert(Window.Tabs, Tab)

        function Tab:CreateToggle(cfg)
            cfg.CurrentValue = cfg.CurrentValue or false
            if cfg.Flag and YannCG.Flags[cfg.Flag] ~= nil then
                cfg.CurrentValue = YannCG.Flags[cfg.Flag]
            end

            local Toggle = {Type = "Toggle", Value = cfg.CurrentValue}
            table.insert(Tab.Elements, Toggle)

            -- Real-time callback execution
            spawn(function()
                while wait(0.1) do
                    if cfg.Callback then
                        cfg.Callback(Toggle.Value)
                    end
                end
            end)

            function Toggle:Set(val)
                Toggle.Value = val
                if cfg.Flag then
                    YannCG.Flags[cfg.Flag] = val
                end
            end

            return Toggle
        end

        function Tab:CreateButton(cfg)
            local Button = {Type = "Button"}
            table.insert(Tab.Elements, Button)

            function Button:Fire()
                if cfg.Callback then
                    cfg.Callback()
                end
            end

            return Button
        end

        return Tab
    end

    return Window
end

-- Notification System
function YannCG:Notify(info)
    print(string.format("[YannCG] %s: %s", info.Title, info.Content))
    -- Production: Use ScreenGui with smooth animations
end

-- Load saved configuration
function YannCG:LoadConfig()
    -- Production: Use JSON with writefile/readfile
    print("[YannCG] Configuration loaded")
end

-- Public API
YannCG.CreateWindow = CreateWindow
YannCG.LoadConfig = YannCG.LoadConfig

return YannCG
